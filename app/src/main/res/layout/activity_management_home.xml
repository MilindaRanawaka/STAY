<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".ManagementHomeActivity">

    <Button
        android:id="@+id/roomBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Mroom"
        tools:layout_editor_absoluteX="238dp"
        tools:layout_editor_absoluteY="256dp" />

    <Button
        android:id="@+id/stuBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Mstu"
        tools:layout_editor_absoluteX="53dp"
        tools:layout_editor_absoluteY="237dp" />

    <Button
        android:id="@+id/leaveBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="95dp"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="85dp"
        android:layout_marginRight="85dp"
        android:text="@string/Mleave"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/foodBtn"
        app:layout_constraintTop_toBottomOf="@+id/roomBtn" />

    <Button
        android:id="@+id/foodBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="53dp"
        android:layout_marginLeft="53dp"
        android:text="@string/Mfood"
        app:layout_constraintBaseline_toBaselineOf="@+id/leaveBtn"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/payBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Mpay"
        tools:layout_editor_absoluteX="53dp"
        tools:layout_editor_absoluteY="438dp" />
</androidx.constraintlayout.widget.ConstraintLayout>