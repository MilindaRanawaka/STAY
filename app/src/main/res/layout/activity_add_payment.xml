<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    android:background="@drawable/back"
    tools:context=".AddPayment" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_marginTop="8dp"
                app:srcCompat="@drawable/stay" />

            <TextView
                android:id="@+id/textView43"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/btn1"
                android:textColor="@color/common_google_signin_btn_text_light_focused"
                android:textSize="36sp" />

            <EditText
                android:id="@+id/editTextpID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="50dp"
                android:drawableStart="@drawable/ic_action_name"
                android:ems="10"
                android:gravity="center"
                android:hint="@string/PayUserID"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/editTextpName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="50dp"
                android:drawableLeft="@drawable/ic_action_name"
                android:ems="10"
                android:gravity="center"
                android:hint="@string/PayName"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/editTextpPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="50dp"
                android:drawableStart="@drawable/ic_action_phone"
                android:ems="10"
                android:gravity="center"
                android:hint="@string/PayPhone"
                android:inputType="phone" />

            <TextView
                android:id="@+id/textViewupdt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/PayRoomType"
                android:textSize="18sp" />

            <RadioGroup
                android:id="@+id/roomTypepRadio"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="50dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <RadioButton
                    android:id="@+id/radioNonAC"
                    android:layout_width="158dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:gravity="center_vertical"
                    android:text="@string/radio1" />

                <RadioButton
                    android:id="@+id/radioAC"
                    android:layout_width="89dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/radio2" />

            </RadioGroup>

            <EditText
                android:id="@+id/editTextpAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="50dp"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_action_amount"
                android:ems="10"
                android:gravity="center"
                android:hint="@string/Payamount"
                android:inputType="number|textPersonName" />

            <Spinner
                android:id="@+id/spinnerBank"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="50dp"
                android:entries="@array/Banks"
                android:gravity="center|center_horizontal" />

            <EditText
                android:id="@+id/editTextpDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:drawableStart="@drawable/ic_action_calander"
                android:ems="10"
                android:gravity="center"
                android:hint="@string/PayDate"
                android:inputType="date|textPersonName" />

            <Button
                android:id="@+id/buttonpAdd"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="8dp"
                android:background="#B79CF0"
                android:text="@string/msg6" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>